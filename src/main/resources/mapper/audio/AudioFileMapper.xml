<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fakehunters.backend.audio.mapper.AudioFileMapper">

    <resultMap id="AudioFileResultMap" type="fakehunters.backend.audio.domain.AudioFile">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="fileName" column="file_name"/>
        <result property="filePath" column="file_path"/>
        <result property="fileSize" column="file_size"/>
        <result property="duration" column="duration"/>
        <result property="sampleRate" column="sample_rate"/>
        <result property="uploadedAt" column="uploaded_at"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="fakehunters.backend.audio.domain.AudioFile"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO audio_files (
        user_id, file_name, file_path, file_size, duration, sample_rate,
        uploaded_at, status, created_at, updated_at
        ) VALUES (
        #{userId}, #{fileName}, #{filePath}, #{fileSize}, #{duration}, #{sampleRate},
        NOW(), 'pending', NOW(), NOW()
        )
    </insert>

    <select id="findById" resultMap="AudioFileResultMap">
        SELECT * FROM audio_files
        WHERE id = #{id}
    </select>

    <select id="findByIdAndUserId" resultMap="AudioFileResultMap">
        SELECT * FROM audio_files
        WHERE id = #{id} AND user_id = #{userId}
    </select>

    <select id="findByUserIdOrderByCreatedAtDesc" resultMap="AudioFileResultMap">
        SELECT * FROM audio_files
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

    <select id="findByStatus" resultMap="AudioFileResultMap">
        SELECT * FROM audio_files
        WHERE status = #{status}
    </select>

    <update id="updateStatus">
        UPDATE audio_files
        SET status = #{status}, updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM audio_files
        WHERE id = #{id}
    </delete>

</mapper>